---
import Layout from '../layouts/Layout.astro';
import Heart from '../components/heart.astro';

const today = new Date()
const datoGift = new Date('2018-10-13')
const diff = today.getTime() - datoGift.getTime()
const msPerDay = 1000 * 60 * 60 * 24;
const daysGone = Math.round(diff/msPerDay);
---

<Layout title='Welcome to Astro.'>
    <main class="h-screen w-screen flex flex-col ">
			<section class="basis-1/3 grid place-content-center">
        <h2>En melding til HELE verden!</h2>
			</section>
			<section class="basis-1/3 grid place-content-center">
				<h2>Jeg er gift med verden beste Mirjam Vingmark Songedal!</h2>
			</section>
			<section class="basis-1/3 grid place-content-center">
				<h2>Jeg elsker deg! Og nå har vi vært gift i {daysGone} dager!</h2>
			</section>
    </main>
</Layout>
